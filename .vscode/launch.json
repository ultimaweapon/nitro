{
  "configurations": [
    {
      "name": "Build (std)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/dist/bin/nitro",
      "args": [
        "build",
        "${workspaceFolder}/std"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1"
      },
      "preLaunchTask": "build"
    },
    {
      "name": "Export (std)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/dist/bin/nitro",
      "args": [
        "build",
        "--export",
        "${workspaceFolder}/dist/share/nitro",
        "${workspaceFolder}/std"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1"
      },
      "preLaunchTask": "build"
    },
    {
      "name": "Build (cli)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/dist/bin/nitro",
      "args": [
        "build",
        "${workspaceFolder}/cli"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1"
      },
      "preLaunchTask": "build"
    }
  ],
  "version": "2.0.0"
}
