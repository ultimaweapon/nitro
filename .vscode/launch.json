{
  "configurations": [
    {
      "name": "Build",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/dist/bin/nitro",
      "args": [
        "build"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1"
      },
      "preLaunchTask": "build"
    },
    {
      "name": "Export",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/dist/bin/nitro",
      "args": [
        "build",
        "--pkg",
        "${workspaceFolder}/dist/share/nitro/nitro.npk"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1"
      },
      "preLaunchTask": "build"
    }
  ],
  "version": "2.0.0"
}
